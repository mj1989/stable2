<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Stable Management System</title>
</head>
<body>
    <div class="container">
        <div class="form-group">
            <label for="name"> Description </label>
            <input type="text" name="description" id="description" 
            class="form-control" value="<%= activity.description %>" required>    
        </div>
        <div class="form-group">
            <label for="gender">Category</label>
            <select class="form-select" id="category" name="category" required>
                <option selected value="<%= activity.category %>"><%= activity.category %></option>
                <option value="health">Health</option>
                <option value="hoes">Hoes</option>
                <option value="riding">Riding</option>
                <option balue="carrage"> Carrage </option>
              </select>   
        </div>
        <div class="form-group mb-3">
            <label for="startDate">Start Date</label>
            <input type="date" name="startDate" id="startDate" class="form-control" 
            value="<%= activity.startDate.toISOString().split('T')[0] %>" required>    
        </div>
        <div class="form-group mb-3">
            <label for="startTime">Start time</label>
            <input type="time" name="startTime" id="startTime" class="form-control" 
            value="<%= Number(activity.startDate.toISOString().split('T')[1].split(':')[0])%>:<%= activity.startDate.toISOString().split('T')[1].split(':')[1]%>" required>    
        </div>
        <div class="form-group mb-3">
            <label for="endDate">End Date</label>
            <input type="date" name="endDate" id="endDate" class="form-control" 
            value="<%= activity.endDate.toISOString().split('T')[0] %>" required>    
        </div>
        <div class="form-group mb-3">
            <label for="endTime">End time</label>
            <input type="time" name="endTime" id="endTime" class="form-control" 
            value="<%= Number(activity.endDate.toISOString().split('T')[1].split(':')[0])%>:<%= activity.endDate.toISOString().split('T')[1].split(':')[1]%>" required>    
        </div>
        <div class="form-group mb-3">
            <label for="horseID">Horse ID</label>
            <input type="text" name="horseID" id="horseID" 
            class="form-control" value="<%=activity.horseID %>" disabled>
            
        </div>

        <a href="/horses/<%= horse.slug %>" class="btn btn-secondary">Back</a>
        <button type="submit" class="btn btn-primary">Save</button>
        
        <script>
            $( function() {
              $( "#datepicker" ).datepicker();
            } );
        </script>
    </div>
</body>
