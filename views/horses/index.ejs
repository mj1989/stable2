<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <title>Stable Management System</title>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
              <a class="navbar-brand" href="/">Home</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                  <a class="nav-link" href="/horses">Horses</a>
                  <a class="nav-link" href="/calendar">Calendar</a>
                </div>
              </div>
            </div>
          </nav>
        <h1 class="mb-3">Horses</h1>
        <a href="/horses/addHorse" class="btn btn-success">Add Horse</a>

        <% horses.forEach( horse => { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%= horse.name %></h4>
                    <div class="card-subtitle mb-2 text-muted"><%= horse.date.toLocaleDateString() %></div>
                    <div class="card-text mb-2">
                        <span class="badge bg-secondary"><%= horse.gender %></span>
                        <span class="badge bg-secondary"><%= horse.breed %></span>
                        <div class="mt-2">
                            <a href="horses/<%= horse.slug %>" class="btn btn-primary">Details</a>
                            <a href="horses/edit/<%= horse.id %>" class="btn btn-info text-white">Edit</a>
                            <form action="/horses/<%= horse.id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                        
                    </div>
                    
                </div>
                
            </div>
        <% }) %>
    </div>
</body>
</html>